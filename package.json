{
  "name": "pomodoro-app",
  "version": "1.0.0",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "Pomodoro Timer Desktop App",
  "build": {
    "appId": "com.pomodoro.app",
    "productName": "Pomo Doll",
    "win": {
      "icon": "assets/app_icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.exe"
    }
  },
  "devDependencies": {
    "@vitest/ui": "^3.2.4",
    "electron": "^38.3.0",
    "electron-builder": "^26.0.12",
    "happy-dom": "^20.0.4",
    "jsdom": "^27.0.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "electron-window-state": "^5.0.3"
  }
}
